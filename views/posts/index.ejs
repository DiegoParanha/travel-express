<%- include('../partials/header') %>

<h1>All Posts</h1>

<table id="list">
    <thead>
      <tr>
        <th>Location</th>
        <th>Continent</th>
        <th>Photo</th>
        <th>Rating</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(function(p) { %>
        <tr>
          <td><%= p.location %></td>
          <td><%= p.continent %></td>
          <td><%= p.photo %></td>
          <td><%= p.rating %></td>
          <td><%= p.description %></td>
          <td><a href="/posts/<%= p._id %>">Post Details</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>




<%- include('../partials/footer') %>